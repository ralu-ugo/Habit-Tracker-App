<div class="bg">
    <%# monthly calendar where you're listing all habits for that person as a link to that habits show page %>

    <h1 class="cal">Calendar</h1>
    <div class="simple-calendar">
      <%= month_calendar(events: @habitslots) do |date, habitslots| %>
      <%= date %>

      <% habitslots.each do |habitslot| %>
        <div>
          <p><%= link_to habitslot.habit.title, habit_habit_slot_path(habitslot.habit, habitslot) %></p>
        </div>
      <% end %>
      <% end %>
    </div>

    <%# button to link to todays schedule %>
    <div class="btn btn-primary"><%= link_to "look at todays schedule", schedule_today_path %></div>
</div>
