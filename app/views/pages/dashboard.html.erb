<body class="page">
<%= render "shared/footer" %>
<br>
<div class="content">
    <div class="top-dash">
      <span>
        <p><%= Date.today %></p>
        <h1>hello Bobby </h1><hr>
        <br>
      </span><br>
    </div>
    <div class="mid-dash">
      <h4>Your favourites</h4>
      <ul class="fav-habit-display">
        <% @habits.each do |habit| %>
        <li class="fav-habit-card" data-controller="favourite" data-favourite-target="habit" data-favourite="<%= habit.favourite %>" data-id="<%= habit.id %>">
          <p><%= habit.title %></p><hr>
          <div data-action="click->favourite#favourite"><%= render "shared/star", habit: habit %></div>
        </li>
        <% end %>
      </ul>
    </div>
  <%= render "shared/navbar" %>
</div>
</body>
