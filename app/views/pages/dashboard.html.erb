<body class="page">
<%= render "shared/footer" %>
<br>
<div class="content">
    <div class="top-dash">
      <span>
        <p><%= Date.today %></p>
        <h1>hello Bobby </h1><hr>
        <br>
      </span><br>
    </div>
 <div class = "carousel-div">
  <%= render "shared/carousel" %>
 </div>
  <div>
    <h4>Your favourite habits</h4>
    <ul class="fav-habit-display">
      <% @fav_habits.each do |habit| %>
          <li class="fav-habit-card" style="background:linear-gradient(90deg, <%= habit.colour1 %>, <%= habit.colour2 %> ); "data-favourite-target="habit" data-favourite="<%= habit.favourite %>" data-id="<%= habit.id %>">
            <%= link_to habit_path(habit) do %>
            <p class= "title-dashboard"><%= habit.title %></p><hr>
            <p class= "desc-dashboard"><%= habit.description %></p>
            <div data-action="click->favourite#favourite" data-favourite-target="star"><%= render "shared/star", habit: habit %></div>
            <% end %>
          </li>
      <% end %>
    </ul>
  </div>
      </ul>
    </div>
  <%= render "shared/navbar" %>
</div>
</body>
