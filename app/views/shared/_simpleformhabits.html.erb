
<%= simple_form_for(@habit) do |f| %>
  <%= f.input :title, wrapper_html: { class: "form-title-wrapper" }, input_html: { class: "form-input-dark" } %>
  <%= f.input :description, wrapper_html: { class: "form-title-wrapper" }, input_html: { class: "form-input-dark" } %>
  <%= f.input :favourite, input_html: { class: "form-favourite"}, as: :boolean, input_html: { class: "toggle" }  %>
  <%= f.input :start_date, wrapper_html: { class: "form-title-wrapper" }, input_html: { class: "start-date-input" } %>
  <%= f.input :end_date, wrapper_html: { class: "form-title-wrapper" }, input_html: { class: "start-date-input" } %>
  <%= f.input :repeat, as: :boolean, input_html: { class: "toggle" } %>
  <%= f.input :monday %>
  <%= f.input :tuesday %>
  <%= f.input :wednesday %>
  <%= f.input :thursday %>
  <%= f.input :friday %>
  <%= f.input :saturday %>
  <%= f.input :sunday %>
  <%= f.submit  class: "create-button" %>
<% end %>
