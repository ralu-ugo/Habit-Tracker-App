<div class="container-show">
  <%= render "shared/footer" %>
  <div class="habit-show">
    <div class="back-button">
      <%= link_to  habits_path, style: "text-decoration: none" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-bar-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M12.5 15a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5ZM10 8a.5.5 0 0 1-.5.5H3.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L3.707 7.5H9.5a.5.5 0 0 1 .5.5Z"/>
        </svg>
      <% end %>
      <%= link_to "Back", habits_path, style: "text-decoration: none"%>
    </div>
    <div class="habit-card-show">
      <div class="starr"><%= render "shared/star", habit: @habit %></div>
      <div class="habit-card-details">
        <h2><%= @habit.title %></h2>
        <p><%= @habit.description %></p>
      </div>
    </div>
  </div>
    <div class="destroy-edit-buttons">
      <%= link_to edit_habit_path(@habit), class: "edit-button" do%>
        <div>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
          </svg>
        </div>
      <% end %>
      <%= link_to habit_path(@habit), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete-button" do %>
        <div>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
          <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
          </svg>
        </div>
      <% end %>
    </div>
  <div class="complete-circle">
    <div
      data-controller="circularbar"
      data-circularbar-max-days-value="<%= @total_habitslots_count.to_i %>"
      data-circularbar-completion-days-value="<%=  @total_completed_habitslots_count.to_i%>"
      ></div>
  </div>
    <h3>So close to your monthly goal !</h3>
    <%= render "shared/navbar" %>
</div>

